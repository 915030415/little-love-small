.index .container .province .statistics {
  width: 750rpx;
  height: 85rpx;
  line-height: 85rpx;
  color: #000000;
  font-size: 32rpx;
  padding-left: 24rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
.index .container .province .statistics-box {
  width: 710rpx;
  height: 210rpx;
  margin: 20rpx;
  background: #FFFFFF;
  border: 1rpx solid #E4E4E4;
  border-radius: 6rpx;
}
.index .container .province .statistics-box .sum {
  position: relative;
  height: 81rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #E4E4E4;
  line-height: 81rpx;
}
.index .container .province .statistics-box .sum .province-name {
  display: inline-block;
  height: 42rpx;
  margin-left: 40rpx;
  line-height: 40rpx;
  text-align: center;
}
.index .container .province .statistics-box .sum .total {
  position: absolute;
  height: 33rpx;
  color: #FE4345;
  right: 20rpx;
  line-height: 33rpx;
  text-align: center;
  top: calc(50% - 16.5rpx);
}
.index .container .province .statistics-box .content {
  height: 130rpx;
  width: 710rpx;
  display: flex;
}
.index .container .province .statistics-box .content .box {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.index .container .province .statistics-box .content .box .number {
  font-size: 28rpx;
  color: #222222;
  text-align: center;
  line-height: 40rpx;
  height: 40rpx;
  width: 46rpx;
}
.index .container .province .statistics-box .content .box .name {
  font-size: 24rpx;
  color: #999999;
  height: 33rpx;
  line-height: 33rpx;
}
.index .container .province .statistics-box .content .line::after {
  content: "";
  position: absolute;
  right: 0rpx;
  top: 25rpx;
  border: 1rpx solid #DEDEDE;
  box-sizing: border-box;
  height: 100%;
  width: 1rpx;
  color: #DEDEDE;
  transform-origin: 0 0;
  transform: scale(0.5);
}
