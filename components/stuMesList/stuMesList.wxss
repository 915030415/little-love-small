.box {
  width: 750rpx;
  padding: 0rpx 24rpx;
}
.box .message {
  width: 702rpx;
  height: 200rpx;
  /*height:203.5rpx;*/
  border-bottom: 1rpx solid #E9E9E9;
  margin-bottom: 23.5rpx;
  display: flex;
  position: relative;
}
.box .message image {
  left: 0px;
  width: 180rpx;
  height: 180rpx;
  vertical-align: top;
}
.box .message .means {
  margin-left: 24rpx;
  width: 498rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /*position:absolute;*/
  /*top:0rpx;*/
  /*right:0rpx;*/
}
.box .message .means view {
  letter-spacing: 0;
  margin-top: 8rpx;
}
.box .message .means view:nth-of-type(1) {
  font-size: 30rpx;
  color: #000000;
  line-height: 44rpx;
}
.box .message .means view:nth-of-type(2) {
  font-size: 26rpx;
  color: #666666;
}
.box .message .means view:nth-of-type(3) {
  font-size: 26rpx;
  color: #222222;
  line-height: 37rpx;
  width: 494rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.box .message .means view:nth-of-type(4) {
  ont-size: 26rpx;
  color: #F9AA21;
}
