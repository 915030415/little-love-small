.stuFamily {
  background: #FFFFFF;
}
.stuFamily .box .mess {
  text-align: center;
  color: #ccc;
}
.stuFamily .box .message {
  /*border: 1rpx solid red;*/
}
.stuFamily .box .message .describe {
  width: 100%;
  display: flex;
  padding-left: 48rpx;
  flex-direction: column;
  justify-content: space-around;
}
.stuFamily .box .message .describe text {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 0;
}
.stuFamily .box .situation {
  /*border: 1rpx solid red;*/
}
.stuFamily .box .situation .describe {
  padding: 0rpx 48rpx;
}
.stuFamily .box .situation .describe .detailed {
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 0;
  text-align: justify;
  line-height: 48rpx;
}
.stuFamily .box .situation .describe .picture {
  height: 200rpx;
  display: flex;
  justify-content: space-between;
}
.stuFamily .box .situation .describe .picture image {
  width: 317rpx;
  height: 200rpx;
  border-radius: 5%;
}
.stuFamily .box .talk .box {
  padding: 0rpx 48rpx 40rpx;
}
.stuFamily .box .talk .box .picture {
  height: 200rpx;
  display: flex;
  justify-content: space-between;
}
.stuFamily .box .talk .box .picture image {
  width: 317rpx;
  height: 200rpx;
  border-radius: 5%;
}
.stuFamily .menu {
  position: relative;
  height: 42rpx;
  line-height: 42rpx;
  margin-top: 23.5rpx;
}
.stuFamily .menu text {
  margin-left: 24rpx;
}
.stuFamily .menu text:first-of-type {
  display: inline-block;
  width: 4rpx;
  height: 33rpx;
  background: #FE4345;
  border-radius: 2rpx;
}
.stuFamily .menu text:last-of-type {
  position: absolute;
  top: -10%;
  /*border:1rpx solid red;*/
  display: inline-block;
  height: 42rpx;
  line-height: 42rpx;
  font-size: 30rpx;
  color: #000000;
  letter-spacing: 0;
}

.mess {
  margin-top: 20rpx;
  width: 100%;
  text-align: center;
  color: #ccc;
}
